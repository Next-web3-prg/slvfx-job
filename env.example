# Database Configuration (NeonDB)
DB_HOST=your-neon-host.neon.tech
DB_PORT=5432
DB_NAME=neondb
DB_USER=your-neon-username
DB_PASSWORD=your-neon-password
DATABASE_URL=postgresql://neondb_owner:yourpassword@ep-your-neon-host-pooler.region.neon.tech/yourdbname?sslmode=require&channel_binding=require

# Alternative: Use NeonDB connection string directly
# DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs (optional)
SCRAPER_API_KEY=your-scraper-api-key
BRIGHT_DATA_USERNAME=your-bright-data-username
BRIGHT_DATA_PASSWORD=your-bright-data-password

# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key 